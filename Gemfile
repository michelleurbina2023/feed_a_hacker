source 'https://rubygems.org'

gem 'rails', '3.2.13'

# PostgreSQL + Stripe + Twitter Bootstrap + Geocode

gem 'postgres-pr'
gem 'pg'
gem 'geocoder'
gem 'bcrypt-ruby', :require => 'bcrypt'
gem 'bootstrap-sass'
gem 'jquery-rails'
gem 'stripe'
gem 'sass'
gem 'haml'
gem 'paperclip'
gem 'rmagick'

# Factory Girl + Capybara + RSPEC testing

group :development do
  gem 'rspec-rails'
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'meta_request'
  gem 'selenium-webdriver'
  gem 'pry'
  gem 'database_cleaner', :git => 'git://github.com/bmabey/database_cleaner.git'
  gem 'factory_girl_rails'
  gem 'guard-rspec'
end

group :test do
  gem 'capybara'
  gem 'launchy'
  gem 'faker'
  gem 'mocha'
end

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end
