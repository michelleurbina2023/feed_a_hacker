<%= form_for(@hacker) do |f| %>
  <% if @hacker.errors.any? %>
    <ul>
      <% @hacker.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <p>Give us a few details</p>

  <p>
    <%= f.label :first_name, "Input your first name:" %>
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :last_name, "Input your last name:" %>
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :email, "What's your preferred email address?" %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password, "Choose a password (make it secure and longer than 4 characters):" %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Please confirm your password:" %>
    <%= f.password_field :password_confirmation %>
  </p>

  <% unless controller.action_name == 'new' %>
    <p>
      <%= f.label :background, "Upload a background image for your portfolio (choose a picture of you doing something awesome):" %>
      <%= f.file_field :background %>
    </p>
    <p>
      <%= f.label :title, "Give yourself a raison d'etre (i.e. Padawan developer, UX wizard, Design fanatic):" %>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :location, "Input your current location (i.e. London, Panama City, the Himalayas):" %>
      <%= f.text_field :location %>
    </p>
    <p>
      <%= f.label :tag_line, "Write a catchy tag line (i.e. Building awesome things in a garage, Inventing the digital answer to poverty):" %>
      <%= f.text_field :tag_line %>
    </p>
    <p>
      <%= f.label :twitter_url, "What's your Twitter username?" %>
      <%= f.text_field :twitter_url %>
    </p>
    <p>
      <%= f.label :git_url, "What's your Github username?" %>
      <%= f.text_field :git_url %>
    </p>
    <p>
      <%= f.label :hackernews_url, "What's your HackerNews username?" %>
      <%= f.text_field :hackernews_url %>
    </p>
    <p>
      <%= f.label :linkedin_url, "What's your Linkedin username?" %>
      <%= f.text_field :linkedin_url %>
    </p>
  <% end %>

  <p>
    <%= f.submit (@hacker.new_record? ? "Create" : "Update profile"), :class => "btn btn-info" %>
  </p>
<% end %>

