<!doctype html>
<html>
  <head>
    <link href='http://fonts.googleapis.com/css?family=Sarina' rel='stylesheet' type='text/css'>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Feed a Hacker" %></title>
    <meta name="description" content="building a digital utopia bit by bit">
    <meta name="author" content="JFP">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "https://js.stripe.com/v2/", "application" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render partial: 'layouts/navigation' %>
        </div>
      </nav>
    </header>
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span12">

              <%= yield %>

            </div>
          </div>
          <!-- <footer>
            <div class="footer">
              <p><br>&copy; Feed a Hacker 2013</p>
            </div>
          </footer> -->
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>