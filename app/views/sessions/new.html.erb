<div class="hacker-form">
  <div class="hacker-form-title">
    <center>Access the revolution</center>
  </div>
  <%= form_tag sessions_path do %>
    <div class="hacker-form-labels">
    <p>
      <%= label_tag :email %><br />
      <%= text_field_tag :email, params[:email] %>
    </p>
    <p>
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </p>
    <p><%= submit_tag "Enter", :class => "btn btn-info" %></p>
    </div>
  <% end %>
</div>
