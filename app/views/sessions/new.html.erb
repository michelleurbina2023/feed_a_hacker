<div class="span8">
  <div class="form">
    <p>Log in</p>
  <%= form_tag sessions_path do %>
    <p>
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>
    </p>
    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </p>
    <p><%= submit_tag "Enter", :class => "btn btn-info" %></p>
    </div>
  <% end %>
</div>
